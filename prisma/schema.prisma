// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Battle {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  playerTeam Team
  enemyTeam  Team
}

type Team {
  name      String
  creatures Creature[]
}

type Creature {
  instrument Instrument
  attack     Int
  health     Int
}

enum Instrument {
  PIANO
  GUITAR
  DRUM
}
